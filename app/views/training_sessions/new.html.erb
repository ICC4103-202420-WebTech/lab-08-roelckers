<%= form_with model: @training_session, local: true do |form| %>
    <div class="mb-3">
      <%= form.label :date, "Fecha", class: "form-label" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :activity, "Actividad", class: "form-label" %>
      <%= form.text_field :activity, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :duration, "Duración (minutos)", class: "form-label" %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :description, "Descripción", class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <%= form.submit "Guardar", class: "btn btn-primary" %>
  <% end %>
  