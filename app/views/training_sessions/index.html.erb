<h1>Mis Sesiones de Entrenamiento</h1>
<%= link_to 'Nueva Sesión', new_training_session_path, class: 'btn btn-primary mb-3' %>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Fecha</th>
      <th>Actividad</th>
      <th>Duración (min)</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @training_sessions.each do |session| %>
      <tr>
        <td><%= session.date %></td>
        <td><%= session.activity %></td>
        <td><%= session.duration %></td>
        <td>
          <%= link_to 'Ver', training_session_path(session), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Editar', edit_training_session_path(session), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Eliminar', training_session_path(session), method: :delete, data: { confirm: "¿Estás seguro?" }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
