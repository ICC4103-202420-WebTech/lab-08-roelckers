<%= form_with model: @training_session, local: true do |form| %>
    <div class="form-group">
      <%= form.label :date, "Fecha" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :activity, "Actividad" %>
      <%= form.text_field :activity, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :duration, "Duración (min)" %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.label :description, "Descripción" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
  
    <%= form.submit class: "btn btn-primary mt-3" %>
    <%= link_to 'Cancelar', training_sessions_path, class: 'btn btn-secondary mt-3' %>
  <% end %>
  